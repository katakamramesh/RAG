MONGODB_URI=mongodb://root:example@mongo:27017/ragchat?authSource=admin
API_KEYS=your_api_key_here,second_api_key_here,third_api_key_here
RATE_LIMIT=100
CORS_ALLOWED_ORIGINS=*

# LLM Configuration - OpenAI
# Get your API key from: https://platform.openai.com/api-keys
LLM_API_KEY=your-openai-api-key-here
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7

# Alternative LLM Configurations (uncomment to use)

# Azure OpenAI
# LLM_API_KEY=your-azure-key
# LLM_API_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2023-05-15
# LLM_MODEL=gpt-35-turbo

# GPT-4 (requires appropriate OpenAI plan)
# LLM_MODEL=gpt-4
# LLM_MAX_TOKENS=2000

# Local LLM (e.g., Ollama, LM Studio)
# LLM_API_URL=http://localhost:11434/v1/chat/completions
# LLM_MODEL=llama2
